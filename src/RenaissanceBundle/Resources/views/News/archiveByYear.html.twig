{% for item in news %}
	<p>
		<a href="{{ path('news_archive_by_year_and_month', {'year': item.year, 'month': item.month}) }}">{{ item.0.creationDate|date('F') }}</a> ({{ item.items }} aktualności)
	</p>
{% endfor %}


